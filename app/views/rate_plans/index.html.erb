<h1>Listing rate_plans</h1>

<table>
  <tr>
    <th>Room Type</th>
    <th>Rate Card</th>
    <th>Start Date</th>
    <th>Expiry Date</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rate_plans.each do |rate_plan| %>
  <tr>
    <td><%= rate_plan.room_type.name %></td>
    <td><%= rate_plan.rate_card.tariff_name %></td>
    <td><%= rate_plan.start_date_to_s %></td>
    <td><%= rate_plan.expiry_date_to_s %></td>
    <td><%= rate_plan.status %></td>
    <td><%= link_to 'Show', rate_plan %></td>
    <td><%= link_to 'Edit', edit_rate_plan_path(rate_plan) %></td>
    <td><%= link_to 'Destroy', rate_plan, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

